<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.consamcon.pick_a_pic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.consamcon.pick_a_pic.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- This activity holds the high scores -->
        <activity
            android:name="com.example.consamcon.pick_a_pic.HomeActivity"
            android:parentActivityName="com.example.consamcon.pick_a_pic.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name="com.example.consamcon.pick_a_pic.SettingsActivity"
            android:parentActivityName="com.example.consamcon.pick_a_pic.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <!-- <activity android:name=".MainActivity" -->
        <!-- android:parentActivityName=".HomeActivity"> -->
        <!-- &lt;!&ndash; Parent activity meta-data to support 4.0 and lower &ndash;&gt; -->
        <!-- <meta-data -->
        <!-- android:name="android.support.PARENT_ACTIVITY" -->
        <!-- android:value=".HomeActivity"/> -->
        <!-- </activity> -->

        <activity android:name="com.example.consamcon.pick_a_pic.GameActivity" />

        <provider
            android:name="com.example.consamcon.pick_a_pic.data.ImageProvider"
            android:authorities="com.example.consamcon.pick_a_pic.images"
            android:exported="true" />

        <activity android:name="com.example.consamcon.pick_a_pic.GameOverActivity" />
    </application>

</manifest>