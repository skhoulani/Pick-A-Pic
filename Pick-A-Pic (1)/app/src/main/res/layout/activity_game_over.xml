<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.consamcon.pick_a_pic.MainActivity">

    <TextView
        android:id="@+id/gameover"
        android:layout_height="300px"
        android:textSize="40sp"
        android:layout_width="fill_parent"
        android:background="@color/gameover"
        android:text="@string/gameover"
        android:gravity="center"
        style ="@style/MenuStyle"/>

    <TextView
        android:id="@+id/high_score"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:background="@color/gameover_highscore"
        android:text="@string/gameover_highscore"
        android:gravity="center"
        style ="@style/MenuStyle"/>

    <TextView
        android:id="@+id/gameover_playagain"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:background="@color/gameover_playagain"
        android:text="@string/gameover_playagain"
        android:gravity="center"
        android:onClick="loadSettings"
        style ="@style/MenuStyle"/>

    <TextView
        android:id="@+id/gameover_share"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:background="@color/gameover_share"
        android:text="@string/gameover_share"
        android:gravity="center"
        android:onClick="shareScore"
        style ="@style/MenuStyle"/>



</LinearLayout>